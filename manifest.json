{
    "manifest_version": 3,
    "name": "textbook_scraping",
    "version": "1.0",
    "description": "Adds a button to specified pages.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite"
    ],
    "content_scripts": [
        {
            "matches": ["https://sit-coop.jp/products/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}





